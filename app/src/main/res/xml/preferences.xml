<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference     android:title="@string/pre_per_update"
        android:summary="@string/pre_per_update_summary"
        android:key="periodUpdate"
        android:defaultValue="1"
        android:inputType="number"
        android:entries="@array/listArrayPeriod"
        android:entryValues="@array/listValuesPeriod" />
    <ListPreference     android:title="@string/pre_per_distance"
        android:summary="@string/pre_per_distance_summary"
        android:key="distanceUpdate"
        android:inputType="number"
        android:defaultValue="1"
        android:entries="@array/listArrayDistance"
        android:entryValues="@array/listValuesDistance" />
    <Preference
        android:key="buttonLogOut"
        android:title="@string/btn_logout"
        />
</PreferenceScreen>