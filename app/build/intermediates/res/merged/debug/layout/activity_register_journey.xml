<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/journey_name"
            android:padding="10dp"
            android:textColor="@color/lbl_name"
            android:textSize="24dp" />
        <EditText
            android:id="@+id/name_new_journey"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:hint="@string/journey_name"
            android:inputType="text"
            android:padding="10dp"
            android:singleLine="true"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/journey_mode"
            android:padding="10dp"
            android:textColor="@color/lbl_name"
            android:textSize="24dp" />
        <Spinner
            android:id="@+id/mode_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:entries="@array/listModeJourney"
            android:prompt="@string/journey_mode"/>
        </LinearLayout>
    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/journey_comment"
            android:padding="10dp"
            android:textColor="@color/lbl_name"
            android:textSize="24dp" />
        <EditText
            android:id="@+id/comment_new_journey"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/white"
            android:hint="write here"
            android:inputType="text"
            android:padding="10dp"/>
    </LinearLayout>
    <Button
        android:id="@+id/send"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#ea4c88"
        android:text="OK"
        android:textColor="@color/white" />
</LinearLayout>